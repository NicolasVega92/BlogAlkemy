@model IEnumerable<Blog.Models.Post>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List of Posts</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Post" asp-action="Create" class="btn btn-primary">
                Create new Post
            </a> 
        </div>
    </div>
    <br/>

    @if(Model.Count() > 0)
     {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Post Titulo
                        Contenido
                    </th>
                    <th>
                        Fecha
                    </th>
                    <th>
                        Imagen
                    </th>
                    <th>
                        Categoria
                    </th>
                    <th>
                        Cambios
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="30%" class="text-uppercase">@item.Title</td>
                    </tr>
                    <tr>
                        <td width="30%">@item.Content</td>
                        <td width="20%">@item.CreationDate</td>
                        <td width="20%">@item.Image</td>
                        <td width="10%">@item.CategoryId</td>
                        <td width="10%">
                            @*@Html.DropDownList("Category", EnumHelper.GetSelectList(typeof(Category)),
                           "Select My type",
                           new { @class = "form-control" })*@
                        </td>
                        <td width="15%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Post" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary mx-1">Editar</a>
                                <a asp-controller="Post" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-1">Borrar</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No posts created yet</p>
    }

</div>
